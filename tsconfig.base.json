{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dismissible/nestjs-api": ["api/src/index.ts"],
      "@dismissible/nestjs-core": ["libs/core/src/index.ts"],
      "@dismissible/nestjs-hooks": ["libs/hooks/src/index.ts"],
      "@dismissible/nestjs-item": ["libs/item/src/index.ts"],
      "@dismissible/nestjs-request": ["libs/request/src/index.ts"],
      "@dismissible/nestjs-jwt-auth-hook": ["libs/jwt-auth-hook/src/index.ts"],
      "@dismissible/nestjs-rate-limiter-hook": ["libs/rate-limiter-hook/src/index.ts"],
      "@dismissible/nestjs-logger": ["libs/logger/src/index.ts"],
      "@dismissible/nestjs-postgres-storage": ["libs/postgres-storage/src/index.ts"],
      "@dismissible/nestjs-dynamodb-storage": ["libs/dynamodb-storage/src/index.ts"],
      "@dismissible/nestjs-storage": ["libs/storage/src/index.ts"],
      "@dismissible/nestjs-validation": ["libs/validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
