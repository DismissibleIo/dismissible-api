{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.app.json",
    "assets": [
      {
        "include": "../config/**/*.yaml",
        "outDir": "../dist/api/config",
        "watchAssets": true
      }
    ]
  }
}
