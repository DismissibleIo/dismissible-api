{
  "name": "api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "dist/api",
        "main": "api/src/index.ts",
        "tsConfig": "api/tsconfig.app.json",
        "assets": [
          "api/package.json",
          "api/README.md",
          {
            "input": "api/config",
            "glob": "**/*.yaml",
            "output": "config"
          },
          {
            "input": "api/bin",
            "glob": "**/*",
            "output": "bin"
          }
        ],
        "generatePackageJson": true
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build",
        "buildTargetOptions": {
          "main": "api/src/main.ts"
        },
        "runBuildTargetDependencies": true,
        "watch": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/api"],
      "options": {
        "jestConfig": "api/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "test-e2e:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx test-e2e:memory api",
          "nx test-e2e:postgres api",
          "nx test-e2e:dynamodb api",
          "nx test-e2e:other api"
        ],
        "parallel": false
      },
      "cache": true
    },
    "test-e2e:other": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/api-e2e-other"],
      "options": {
        "jestConfig": "api/jest.e2e-config.ts"
      },
      "testMatch": ["**/other/*.e2e-spec.ts"]
    },
    "test-e2e:memory": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/api-e2e-dynamodb"],
      "options": {
        "command": "jest --config api/jest.e2e-config.ts --testMatch '**/dismissible/*.e2e-spec.ts'",
        "env": {
          "DISMISSIBLE_STORAGE_TYPE": "memory"
        }
      }
    },
    "test-e2e:postgres": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/api-e2e-dynamodb"],
      "options": {
        "command": "jest --config api/jest.e2e-config.ts --testMatch '**/dismissible/*.e2e-spec.ts'",
        "env": {
          "DISMISSIBLE_STORAGE_TYPE": "postgres"
        }
      }
    },
    "test-e2e:dynamodb": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/api-e2e-dynamodb"],
      "options": {
        "command": "jest --config api/jest.e2e-config.ts --testMatch '**/dismissible/*.e2e-spec.ts'",
        "env": {
          "DISMISSIBLE_STORAGE_TYPE": "dynamodb"
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/api"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/api"
      }
    }
  }
}
